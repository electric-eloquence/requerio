{
  "name": "requerio",
  "version": "0.3.2",
  "description": "Redux + jQuery + Cheerio = predictable client-side state + server-side testability",
  "main": "dist/requerio.npm.js",
  "scripts": {
    "bundle": "rollup --config && node run/bundle-client.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "doc": "node run/doc.js",
    "lint": "eslint examples && eslint src && eslint test",
    "start": "npm run watch",
    "test": "nyc mocha --require @babel/register --exit test/tests",
    "watch": "nodemon --watch src -e js --exec 'npm run bundle'"
  },
  "husky": {
    "hooks": {
      "post-commit": "npm run bundle && npm run doc",
      "pre-push": "npm run lint && npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electric-eloquence/requerio.git"
  },
  "keywords": [
    "cheerio",
    "client",
    "client-side",
    "isomorphic",
    "isomorphism",
    "jquery",
    "redux",
    "server",
    "server-side",
    "side",
    "state",
    "test",
    "testing",
    "unit"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/electric-eloquence/requerio/issues"
  },
  "homepage": "https://github.com/electric-eloquence/requerio#readme",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "browserify": "^16.2.3",
    "chai": "4.x",
    "cheerio": "1.0.0-rc.2",
    "coveralls": "^3.0.2",
    "eslint": "3.x",
    "husky": "^1.3.1",
    "jsdom": "^13.1.0",
    "mocha": "5.x",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "redux": "4.0.1",
    "rollup": "^1.0.1",
    "rollup-plugin-babel": "^4.2.0",
    "uglify-es": "3.3.9"
  }
}
